      "auth": false,
      "body": {
        "required": ["email","nombre","password"],
        "properties": {
          "email": "string (email)",
          "nombre": "string (min 3)",
          "password": "string (min 6)",
          "rol": "enum: admin|cliente|entrenador|recepcionista (optional)"
        }
      }
    },
    {
      "method": "POST",
      "path": "/api/auth/login",
      "auth": false,
