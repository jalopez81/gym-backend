      "auth": true,
      "params": ["id"]
    },
    {
      "method": "PUT",
      "path": "/api/usuarios/actualizar-perfil",
      "auth": true,
      "body": {
        "properties": {
          "nombre": "string (min 3) optional",
          "email": "string (email) optional"
        }
      }
    },
    {
      "method": "PUT",
      "path": "/api/usuarios/cambiar-password",
      "auth": true,
      "body": {
